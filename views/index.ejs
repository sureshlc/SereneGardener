  <script>
    var slideIndex = 0; // Initialize slide index
    showSlides(); // Call the function to start the slideshow
  
    function showSlides() {
      var i;
      var slides = document.getElementsByClassName("mySlides");
      // Hide all slides
      for (i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      // Increment slide index
      slideIndex++;
      // Reset slide index if it exceeds the number of slides
      if (slideIndex > slides.length) {
        slideIndex = 1;
      }
      // Display the current slide
      slides[slideIndex - 1].style.display = "block";
      // Set a timer to call this function again after 3 seconds
      setTimeout(showSlides, 6000); // Change the duration as needed
    }
  </script>
  
